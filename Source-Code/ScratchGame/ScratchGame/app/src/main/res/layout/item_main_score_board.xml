    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="11"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/textViewMainScoreBoardNo" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#ffffff"
